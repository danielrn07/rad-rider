<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RadRider</title>
    <link rel="stylesheet" href="~/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/RadRiderWebApp.styles.css" asp-append-version="true"/>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-sm p-3 navbar-toggleable-sm navbar-light bg-dark mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            @* NAV *@
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-page="/Index">Início</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="d-flex justify-content-center align-items-center" style="width: 100%;">
        <div class="bg-primary d-flex justify-content-center align-items-center logo" style="z-index: 10;">
            <a class="text-white text-decoration-none font-weight-bold" asp-area="" asp-page="/Index">RadRider</a>
        </div>
    </div>
</header>
<div class="">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>



<footer class="footer text-muted">
    <div class="bg-dark pt-5 d-flex">
        <div class="container">
            <h2 class="text-light text-uppercase m-0">
                Institucional
            </h2>
            
            <a class="nav-link p-0 text-white" asp-area="" asp-page="/AboutUs">Sobre nós</a>
        </div>
    </div>
    <div class="bg-dark"  style="opacity: 0.95;">
        <div class="container">
                <span>&copy; @DateTime.Now.Year – Todos os direitos reservados a Daniel Nascimento</span>
            </div>
    </div>
    
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>